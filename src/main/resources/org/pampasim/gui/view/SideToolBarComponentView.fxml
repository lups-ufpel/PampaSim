<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ToolBar orientation="VERTICAL" style="-fx-padding: 0;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <items>
      <Button alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="5.0" minWidth="-Infinity" mnemonicParsing="false" onAction="#createProcess" text="Criar">
         <tooltip>
            <Tooltip text="Criar processo" />
         </tooltip>
         <graphic>
            <FontIcon iconLiteral="fth-plus-circle" text="" />
         </graphic>
      </Button>
      <Button alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="5.0" mnemonicParsing="false" text="Abrir">
         <tooltip>
            <Tooltip text="Abrir editor de código" />
         </tooltip>
         <graphic>
            <FontIcon iconLiteral="fth-file-plus" />
         </graphic>
      </Button>
      <Button alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="5.0" mnemonicParsing="false" text="Compile">
         <tooltip>
            <Tooltip text="Compilar código" />
         </tooltip>
         <graphic>
            <FontIcon iconLiteral="fth-code" />
         </graphic>
      </Button>
      <Button fx:id="selectSchedBtn" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="5.0" layoutX="10.0" layoutY="70.0" mnemonicParsing="false" onAction="#selectScheduler" text="scheduler">
         <tooltip>
            <Tooltip text="Compilar código" />
         </tooltip>
         <graphic>
            <FontIcon iconLiteral="fth-calendar" />
         </graphic>
      </Button>
      <Separator />
      <Button fx:id="runBtn" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" disable="true" graphicTextGap="5.0" mnemonicParsing="false" onAction="#onStartSimulation" text="New">
         <tooltip>
            <Tooltip text="Iniciar simulação" />
         </tooltip>
         <graphic>
            <FontIcon iconLiteral="fth-play" />
         </graphic>
      </Button>
      <Button alignment="CENTER" contentDisplay="GRAPHIC_ONLY" disable="true" graphicTextGap="5.0" mnemonicParsing="false" text="Reset">
         <tooltip>
            <Tooltip text="Reiniciar simulação" />
         </tooltip>
         <graphic>
            <FontIcon iconLiteral="fth-refresh-cw" />
         </graphic>
      </Button>
      <Button fx:id="stopBtn" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" disable="true" graphicTextGap="5.0" mnemonicParsing="false" onAction="#onFinishSimulation" text="Stop">
         <tooltip>
            <Tooltip text="Parar simulação" />
         </tooltip>
         <graphic>
            <FontIcon iconLiteral="fth-stop-circle" />
         </graphic>
      </Button>
      <Pane VBox.vgrow="ALWAYS" />
   </items>
</ToolBar>
